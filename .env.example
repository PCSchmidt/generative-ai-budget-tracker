# Environment Variables Template for AI Budget Tracker
# Copy this file to .env and fill in your API keys

# ======================
# Application Settings
# ======================
DEBUG=true
SECRET_KEY=your-budget-tracker-secret-key-change-this

# ======================
# Database Configuration
# ======================
# Local Development (Docker)
# DATABASE_URL=postgresql://budget_user:budget_pass@localhost:5432/budget_tracker

# Production (Railway PostgreSQL)
DATABASE_URL=postgresql://postgres:password@hostname:5432/railway

# Alternative Cloud Options:
# Supabase: postgresql://postgres:[password]@db.[project].supabase.co:5432/postgres
# Neon: postgresql://[user]:[password]@[endpoint]/[dbname]
# PlanetScale: mysql://[user]:[password]@[host]/[database]

# ======================
# AI Services API Keys
# ======================
# Hugging Face for expense categorization
HUGGINGFACE_API_KEY=your-huggingface-api-key-here

# Groq for fast inference
GROQ_API_KEY=your-groq-api-key-here

# OpenAI (optional - for advanced features)
OPENAI_API_KEY=your-openai-key-here

# ======================
# External APIs (Future Features)
# ======================
# Plaid for bank integration (advanced feature)
PLAID_CLIENT_ID=your-plaid-client-id
PLAID_SECRET=your-plaid-secret
PLAID_ENV=sandbox

# ======================
# App URLs
# ======================
API_BASE_URL=http://localhost:8000
FRONTEND_URL=http://localhost:19006

# ======================
# Security Settings (UPDATED for Authentication)
# ======================
JWT_SECRET_KEY=your-super-secure-jwt-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ======================
# Email Settings (UPDATED for verification and password reset)
# ======================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@your-domain.com

# Email service options:
# Gmail: smtp.gmail.com:587 (use app password)
# SendGrid: smtp.sendgrid.net:587  
# AWS SES: email-smtp.[region].amazonaws.com:587

# ======================
# Enhanced ML Configuration (Phase 4)
# ======================

# ML Model Performance Settings
ML_ENHANCED_CATEGORIZATION=true
ML_FINANCIAL_ADVISOR=true
ML_SPENDING_INSIGHTS=true

# Model confidence and performance tuning
ML_CONFIDENCE_THRESHOLD=0.6
ML_CACHE_TTL_SECONDS=3600
ML_MAX_RETRIES=3
ML_API_TIMEOUT_SECONDS=10

# Local ML model settings (for offline capability)
ML_USE_LOCAL_MODELS=true
ML_MODEL_CACHE_DIR=./models
ML_DEVICE=-1  # -1 for CPU, 0 for GPU

# Financial advice settings
FINANCIAL_ADVICE_CACHE_HOURS=1
FINANCIAL_ADVICE_MAX_TOKENS=500
FINANCIAL_ADVICE_TEMPERATURE=0.7
